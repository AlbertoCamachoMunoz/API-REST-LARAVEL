{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "C:/wamp64/www/master-fullstack/api-rest-laravel/": "${workspaceFolder}/",
                // "/": "${workspaceRoot}/",
            },
            "ignore":[
                "**/vendor/**/*.php"
            ],
            "xdebugSettings": {
                "max_data": 65535,
                "show_hidden": 1,
                "max_children": 100,
                "max_depth": 5
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "webRoot": "${workspaceRoot}",
            "cwd": "${fileDirname}",
            "port": 9001,
        },
    ]
}